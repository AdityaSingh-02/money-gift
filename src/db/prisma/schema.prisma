generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  name         String?
  mobile       String?        @unique
  city         String?
  password     String
  createdAt    DateTime       @default(now())
  GiftSent     GiftSent[]
  GiftReceived GiftReceived[]
  Events       Events[]
}

model GiftSent {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  sentTo    String
  amount    Int
  createdAt DateTime @default(now())
}

model GiftReceived {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  receivedFrom String
  amount       Int
  createdAt    DateTime @default(now())
}

model Events {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  eventName   String
  eventDate   DateTime
  isUpcomming Boolean
  Guests      Int
  createdAt   DateTime @default(now())
}
